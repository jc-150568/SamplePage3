<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SamplePage.BookPage"
             Title="本棚">
    <ContentPage.Content>
        <StackLayout>
            <TableView Intent="Data">
                <TableView.Root>
                    <TableRoot>
                        <TableSection Title="TableViewについて Intent=Data">
                            <TextCell Text="テキストセル" Detail="詳細"/>
                            <EntryCell Placeholder="ここに入力してください"/>
                            <ImageCell ImageSource = "https://i2.wp.com/oxamarin.com/wp-content/uploads/2016/12/りんちゃん.jpg"/>
                            <SwitchCell Text="スイッチ"/>
                        </TableSection>
                    </TableRoot>
                </TableView.Root>
            </TableView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>