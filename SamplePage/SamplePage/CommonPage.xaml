<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SamplePage.CommonPage"
             Title="一般">
    <ContentPage.Content >
        <StackLayout>
            <TableView Intent="Data">
                <TableView.Root>
                    <TableRoot>
                        <TableSection>
                            <SwitchCell Text="本棚表示でアイコン表示"
                                        OnChanged="OnToggled"
                                        On= "False"
                                        x:Name="sw1"/>
                            <SwitchCell Text="本の連続登録"/>
                        </TableSection>
                    </TableRoot>
                </TableView.Root>
            </TableView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>